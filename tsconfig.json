{
  "compilerOptions": {
    /* Docs: https://www.typescriptlang.org/tsconfig */ "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "lib": ["es6", "dom", "es2017", "dom.iterable"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/**/*.d.ts",
      "./src/types/*.d.ts"
    ]
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": [
    "node_modules",
    "<node_internals>/**",
    "test",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
